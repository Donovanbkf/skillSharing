<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">New Note</h3>
    </div>
    <div class="card-body text-right">
      <form action="/requests/new-request" method="POST">
        <div class="mb-3">
          <label for="description">Description:</label>
          <textarea
            name="description"
            class="form-control"
            placeholder="Description"
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="description">skill_id:</label>
          <input
              type="number"
              class="form-control bg-dark text-white"
              name="skill_id"
              placeholder="Name"
              {{!-- value="{{name}}" --}}
            />
        </div>
        <div class="mb-3">
          <label for="description">user_id:</label>
          <input
              type="number"
              class="form-control bg-dark text-white"
              name="user_id"
              placeholder="Name"
              {{!-- value="{{name}}" --}}
            />
        </div>
        <button class="btn btn-primary w-100" type="submit">
          Save
        </button>
      </form>
    </div>
  </div>
</div>